<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.WordGameFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="45dp"
                app:cardCornerRadius="20dp"
                android:clickable="true"
                app:cardBackgroundColor="@color/light_blue"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Бесконечно"
                    android:textColor="@color/black"
                    android:alpha="0.6"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mainCard_Speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="24dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/light_yellow"
                        android:layout_gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleText_Speed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:paddingBottom="12dp"
                            android:text="На скорость"
                            android:textAlignment="center"
                            android:textColor="#5B3D33"
                            android:textSize="25dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardBtn30_Speed"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="20dp"
                            android:layout_gravity="center"
                            app:cardElevation="2dp"
                            android:layout_marginLeft="70dp"
                            app:cardBackgroundColor="@color/light_green"
                            android:layout_marginRight="70dp">

                            <TextView
                                android:id="@+id/btn30Text_Speed"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:text="30"
                                android:textColor="#0B0B0B"
                                android:textSize="25dp"
                                android:alpha="0.6"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardBtn20_Speed"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="20dp"
                            android:layout_gravity="center"
                            app:cardElevation="2dp"
                            android:layout_marginLeft="70dp"
                            app:cardBackgroundColor="@color/button_1"
                            android:layout_marginRight="70dp">

                            <TextView
                                android:id="@+id/btn20_Speed"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:text="20"
                                android:textColor="#000000"
                                android:alpha="0.6"
                                android:textSize="25dp"
                                android:textStyle="bold"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardBtn10_Speed"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="20dp"
                            android:layout_gravity="center"
                            app:cardElevation="2dp"
                            android:layout_marginLeft="70dp"
                            app:cardBackgroundColor="@color/light_red"
                            android:layout_marginRight="70dp">


                            <TextView
                                android:id="@+id/btn10_Speed"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:text="10"
                                android:textColor="#0B0B0B"
                                android:textSize="25dp"
                                android:alpha="0.6"
                                android:textStyle="bold"/>
                        </androidx.cardview.widget.CardView>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <!-- Левый столбец с кнопками -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"/>

                            <!-- Пустое пространство справа (как в макете) -->
                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mainCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="24dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F5BFA3"
                        android:layout_gravity="center" />




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:paddingBottom="12dp"
                            android:text="На время"
                            android:textAlignment="center"
                            android:textColor="#5B3D33"
                            android:textSize="25dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardBtn4"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="20dp"
                            android:layout_gravity="center"
                            app:cardElevation="2dp"
                            android:layout_marginLeft="70dp"
                            app:cardBackgroundColor="@color/light_green"
                            android:layout_marginRight="70dp">

                            <TextView
                                android:id="@+id/btn4Text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:text="4"
                                android:textColor="#0B0B0B"
                                android:textSize="25dp"
                                android:alpha="0.6"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardBtn5"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="20dp"
                            android:layout_gravity="center"
                            app:cardElevation="2dp"
                            android:layout_marginLeft="70dp"
                            app:cardBackgroundColor="@color/light_red"
                            android:layout_marginRight="70dp">

                            <TextView
                                android:id="@+id/btn5Text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:text="5"
                                android:textColor="#000000"
                                android:alpha="0.6"
                                android:textSize="25dp"
                                android:textStyle="bold"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardBtn6"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="20dp"
                            android:layout_gravity="center"
                            app:cardElevation="2dp"
                            android:layout_marginLeft="70dp"
                            app:cardBackgroundColor="@color/light_purple"
                            android:layout_marginRight="70dp">


                            <TextView
                                android:id="@+id/btn6Text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:text="6"
                                android:textColor="#0B0B0B"
                                android:textSize="25dp"
                                android:alpha="0.6"
                                android:textStyle="bold"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </FrameLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

</FrameLayout>