<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WordlyFragment"
    android:background="#F6F4E9">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:gravity="top">

            <!-- Существующие карточки (Ваши) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="20dp"
                android:clickable="true"
                app:cardBackgroundColor="@color/light_blue"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Слово дня"
                    android:textColor="@color/black"
                    android:alpha="0.6"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clickable="true"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/light_green"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="Путешествие"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:alpha="0.6"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="20dp"
                android:progress="50"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:max="100"
                android:indeterminate="false"
                android:progressDrawable="@drawable/progress_bar"/>



            <androidx.cardview.widget.CardView
                android:id="@+id/mainCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="24dp"
                android:padding="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F5BFA3"
                        android:layout_gravity="center" />

                    <!-- Имитация водяного знака: полупрозрачный View (можно заменить на ImageView при добавлении drawable) -->
                    <View
                        android:layout_width="332dp"
                        android:layout_height="321dp"
                        android:layout_gravity="end|bottom"
                        android:alpha="0.4"
                        android:background="@drawable/copilot_20251023_151750"
                        android:translationX="30dp"
                        android:translationY="30dp" />

                    <!-- Содержимое карточки -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Тренировка"
                            android:textAlignment="center"
                            android:textSize="36sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#5B3D33"
                            android:paddingBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <!-- Левый столбец с кнопками -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp">

                                <!-- Кнопка 4 -->
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardBtn4"
                                    android:layout_width="130dp"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="20dp"
                                    app:cardCornerRadius="20dp">

                                    <TextView
                                        android:id="@+id/btn4Text"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="4"
                                        android:textSize="30dp"
                                        android:gravity="center"
                                        android:fontFamily="sans-serif"
                                        android:textColor="#0B0B0B"
                                        android:background="#BFEFB0" />
                                </androidx.cardview.widget.CardView>

                                <!-- Кнопка 5 -->
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardBtn5"
                                    android:layout_width="130dp"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="16dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="2dp">

                                    <TextView
                                        android:id="@+id/btn5Text"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="5"
                                        android:textSize="30dp"
                                        android:gravity="center"
                                        android:fontFamily="sans-serif"
                                        android:textColor="#0B0B0B"
                                        android:background="#FF4747" />
                                </androidx.cardview.widget.CardView>

                                <!-- Кнопка 6 -->
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardBtn6"
                                    android:layout_width="130dp"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="16dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="2dp">

                                    <TextView
                                        android:id="@+id/btn6Text"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="6"
                                        android:textSize="30dp"
                                        android:gravity="center"
                                        android:fontFamily="sans-serif"
                                        android:textColor="#0B0B0B"
                                        android:background="#D7D9FF" />
                                </androidx.cardview.widget.CardView>

                                <!-- Кнопка 7 -->
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardBtn7"
                                    android:layout_width="130dp"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="8dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="2dp">

                                    <TextView
                                        android:id="@+id/btn7Text"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="7"
                                        android:textSize="30dp"
                                        android:gravity="center"
                                        android:fontFamily="sans-serif"
                                        android:textColor="#0B0B0B"
                                        android:background="#8FE2DB" />
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <!-- Пустое пространство справа (как в макете) -->
                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Можно добавить другие элементы ниже при необходимости -->

        </LinearLayout>

    </ScrollView>

</FrameLayout>
