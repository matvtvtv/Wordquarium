<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".logic.hilt.WordquariumApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wordquarium"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.MultiUserActivity"
            android:exported="false"
            android:theme="@style/Theme.Wordquarium" />
        <activity
            android:name=".ui.MainActi"
            android:exported="false" />
        <activity
            android:name=".ui.MultiUserNewWordForFriend"
            android:exported="false" />
        <activity
            android:name=".ui.CryptogramActivity"
            android:exported="false" />
        <activity
            android:name=".ui.GameChainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.GameWordlyActivity"
            android:exported="false" />
        <activity
            android:name=".ui.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>